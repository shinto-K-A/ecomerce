<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 order-details">
        <div class="section-title text-center">
          <h1 class="title text-success">ORDER PLACED</h1>
        </div>
        <!--================Order Details Area =================-->
	<section class="order_details section_gap">
		<div class="container" style="padding-top: 100PX;">
			
			<div class="row order_d_inner">
				<div class="col-lg-6">
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							<li><a href="#"><span>Order number</span> : {{orderDetail.deliveryDetails.name}}</a></li>
							<li><a href="#"><span>Date</span> : {{orderDetail.date}}</a></li>
							<li><a href="#"><span>Total</span> : {{orderDetail.totalAmount}}</a></li>
							<li><a href="#"><span>Payment method</span> : {{orderDetail.paymentMethod}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="details_item">
						<h4>Shipping Address</h4>
						<ul class="list">
							<li><a href="#"><span>Town</span> : {{orderDetail.deliveryDetails.place}}</a></li>
							<li><a href="#"><span>City</span> : {{orderDetail.deliveryDetails.city}}</a></li>
							<li><a href="#"><span>Postoffice</span> : {{orderDetail.deliveryDetails.postoffice}}</a></li>
							<li><a href="#"><span>Postcode </span> : {{orderDetail.deliveryDetails.pincode}}</a></li>
						</ul>
					</div>
				</div>
				
			</div>
			<a href="/myorder"><button class="btn btn-primary">Go to My Orders</button></a>
			<div class="order_details_table">
				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Price</th>
							</tr>
						</thead>
						{{#each productDetails}}
						<tbody>
							<tr>
								<td>
									<p>{{this.product.name}}</p>
								</td>
								<td>
									<h5>{{this.quantity}}</h5>
								</td>
								<td>
									<p>{{this.product.offerprice}}</p>
								</td>
							</tr>
							{{!-- <tr>
								<td>
									<h4>Subtotal</h4>
								</td>
								<td>
									<h5></h5>
								</td>
								<td>
									<p>$2160.00</p>
								</td>
							</tr> --}}
							
							
						</tbody>
						{{/each}}
					</table>
					<h2 class="text-center">Total:â‚¹ {{orderDetail.totalAmount}}</h2>
				</div>
			</div>
		</div>
	</section>
	<!--================End Order Details Area =================-->






      </div>
      <a href="/"><button class="primary-btn order-submit">Home</button>
    </div>




  </div>
</div>
</div>